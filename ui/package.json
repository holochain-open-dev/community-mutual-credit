{
  "name": "holochain-community-currency-app",
  "version": "0.1.0",
  "author": "guillem.cordoba@gmail.com",
  "license": "MIT",
  "scripts": {
    "build": "rimraf dist && rollup -c rollup.config.js",
    "start:build": "concurrently \"rollup -w -c rollup.config.js\" \"es-dev-server --root-dir dist --app-index index.html --compatibility none --open\"",
    "start": "WS_INTERFACE=ws://localhost:8888 webpack-dev-server --mode=development --open",
    "start:bob": "WS_INTERFACE=ws://localhost:8889 webpack-dev-server --mode=development --open --port 8001",
    "start:carol": "WS_INTERFACE=ws://localhost:8890 webpack-dev-server --mode=development --open --port 8002",
    "start:dave": "WS_INTERFACE=ws://localhost:8891 webpack-dev-server --mode=development --open --port 8003",
    "dev": "concurrently \"npm run hc:start\" \"npm start\"",
    "hc:start": "concurrently \"sim2h_server\" \"npm run hc:alice\" \"npm run hc:bob\" \"npm run hc:carol\" \"npm run hc:dave\"",
    "hc:alice": "cd ../agents/alice && rimraf dna conductor-config.toml storage && holochain -c alice-conductor-config.toml",
    "hc:bob": "cd ../agents/bob && rimraf dna conductor-config.toml storage && holochain -c bob-conductor-config.toml",
    "hc:carol": "cd ../agents/carol && rimraf dna conductor-config.toml storage && holochain -c carol-conductor-config.toml",
    "hc:dave": "cd ../agents/dave && rimraf dna conductor-config.toml storage && holochain -c dave-conductor-config.toml"
  },
  "dependencies": {
    "@authentic/mwc-card": "^0.9.0",
    "@authentic/mwc-circular-progress": "^0.9.0",
    "@holochain/hc-web-client": "^0.5.3",
    "@material/mwc-button": "^0.15.0",
    "@material/mwc-checkbox": "^0.15.0",
    "@material/mwc-dialog": "^0.15.0",
    "@material/mwc-drawer": "^0.15.0",
    "@material/mwc-formfield": "^0.15.0",
    "@material/mwc-icon-button": "^0.15.0",
    "@material/mwc-linear-progress": "^0.15.0",
    "@material/mwc-menu": "^0.15.0",
    "@material/mwc-radio": "^0.15.0",
    "@material/mwc-select": "^0.15.0",
    "@material/mwc-snackbar": "^0.15.0",
    "@material/mwc-switch": "^0.15.0",
    "@material/mwc-tab": "^0.15.0",
    "@material/mwc-tab-bar": "^0.15.0",
    "@material/mwc-textarea": "^0.15.0",
    "@material/mwc-textfield": "^0.15.0",
    "@material/mwc-top-app-bar-fixed": "^0.15.0",
    "@uprtcl/graphql": "0.0.7-alpha.13",
    "@uprtcl/holochain-provider": "0.0.7-alpha.13",
    "@uprtcl/micro-orchestrator": "0.0.7-alpha.13",
    "@vaadin/router": "^1.7.2",
    "graphql-tools": "^5.0.0",
    "holochain-mutual-credit": "^0.0.9",
    "holochain-profiles": "^0.0.6",
    "holochain-social-triangulation": "^0.0.6",
    "lit-element": "^2.3.0",
    "lit-html": "^1.2.1",
    "node-fetch": "^2.6.0"
  },
